package main

import (
	"fmt"
	"os"
	"runtime"
)

func regularFunc() {
	if os.Getenv("GARBLE_TEST_REVERSING") == "true" {
		_, filename, _, _ := runtime.Caller(0)
		fmt.Println("regular filename:", filename)
	}
}
-- cgo_main.go --
