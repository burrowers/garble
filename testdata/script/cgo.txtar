env GOGARBLE=test/main

garble build
! stderr 'warning' # check that the C toolchain is happy
exec ./main
cmp stdout main.stdout
! binsubstr main$exe 'PortedField' 'test/main'

[short] stop # no need to verify this with -short

env GOGARBLE=*
garble build
exec ./main
cmp stdout main.stdout
env GOGARBLE=test/main

garble -tiny build
exec ./main
cmp stdout main.stdout

go build
! stderr 'warning' # check that the C toolchain is happy
exec ./main
